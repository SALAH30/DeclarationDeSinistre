<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/numero"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/motscle"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/fournisseur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fournisseur"
        android:layout_alignBaseline="@+id/montant"
        android:layout_alignBottom="@+id/montant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/montant"
        android:layout_below="@+id/numero"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/numero"
        android:layout_toEndOf="@+id/numero" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>