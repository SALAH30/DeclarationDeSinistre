<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_height="50dp"
        android:id="@+id/type"
        android:text="@string/type"
        android:textSize="25dp"
        android:background="@color/batati"
        android:layout_marginTop="13dp"
        android:layout_width="320dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/lieu"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photo"
        android:layout_alignStart="@+id/photo"
        android:layout_below="@+id/photo"

        android:ems="10"
        android:gravity="center"
        android:hint="Lieu"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="yyyy/mm/dd"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/datetext"
        android:layout_below="@+id/video"
        android:layout_toLeftOf="@+id/lieu"
        android:layout_toStartOf="@+id/lieu" />

    <ImageView
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/photo"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:layout_width="155dp"
        android:elevation="4dp"
        android:layout_below="@+id/type"
        android:layout_alignRight="@+id/type"
        android:layout_alignEnd="@+id/type" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/info_perso"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lieu"
        android:layout_alignRight="@+id/photo"
        android:layout_alignEnd="@+id/photo"
        android:background="@drawable/rectangle"
        android:elevation="4dp"
        android:layout_alignLeft="@+id/datetext"
        android:layout_alignStart="@+id/datetext">

    </ListView>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:gravity="center"
        android:ems="10"

        android:layout_below="@+id/info_perso"
        android:layout_alignLeft="@+id/info_perso"
        android:layout_alignStart="@+id/info_perso"
        android:id="@+id/name"
        android:layout_alignRight="@+id/video"
        android:layout_alignEnd="@+id/video"
        android:layout_width="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Prenom"
        android:gravity="center"
        android:ems="10"
        android:id="@+id/prename"
        android:layout_below="@+id/info_perso"
        android:layout_toRightOf="@+id/datetext"
        android:layout_alignRight="@+id/info_perso"
        android:layout_alignEnd="@+id/info_perso" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/add"
        android:layout_alignBottom="@+id/prename"
        android:layout_alignRight="@+id/prename"
        android:layout_alignEnd="@+id/prename"
        android:layout_below="@+id/info_perso" />

    <Button
        android:text="Envoyer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@color/batati"
        android:layout_below="@+id/photo"
        android:layout_alignLeft="@+id/video"
        android:layout_alignStart="@+id/video" />

    <VideoView
        android:id="@+id/video"
        android:layout_width="155dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_alignTop="@+id/photo" />

</RelativeLayout>